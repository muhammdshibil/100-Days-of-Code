#Math Game (Multiplcation)
def main():
    print("Math Game!")
    num = int(input("Enter the number of multiplication table: "))
    score =0
    for i in range(1, 11):
        user_answer = int(input(f"What is {i}x{num}= "))
        correct_answer = i * num
        if user_answer == correct_answer:
            print("Good work!")
            score+=1
        else:
            print(f"Nope! the answer is {correct_answer}")
    print(f"Your score is {score} out of 10")
    if score == 10:
        print(f"Congratulation you got {score} out of 10")


main()
